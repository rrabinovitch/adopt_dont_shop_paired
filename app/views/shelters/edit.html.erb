<p><%= link_to "Shelter Index", "/shelters" %>
<br>
<%= link_to "Pet Index", "/pets" %></p>
<hr/>
<h1><%= "Edit #{@shelter.name}" %></h1>
<hr/>

<%= form_tag "/shelters/#{@shelter.id}", method: :patch do %>
  <p><%= label_tag :name %>
  <%= text_field_tag :name, @shelter.name %></p>
  <p><%= label_tag :address %>
  <%= text_field_tag :address, @shelter.address %></p>
  <p><%= label_tag :city %>
  <%= text_field_tag :city, @shelter.city %></p>
  <p><%= label_tag :state %>
  <%= text_field_tag :state, @shelter.state %></p>
  <p><%= label_tag :zip %>
  <%= text_field_tag :zip, @shelter.zip %></p>
  <%= submit_tag "Update Shelter" %></p>
<% end %>